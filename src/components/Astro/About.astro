---
import aboutData from "../../data/about.json";
---

<section id="about" class="py-24 px-6 relative z-10 overflow-hidden">
  <div class="max-w-7xl mx-auto">
    <div class="grid md:grid-cols-3 gap-8">
      {/* Motto */}
      <div
        data-aos="fade-up"
        data-aos-delay="0"
        class="p-8 rounded-[2.5rem] bg-white/5 border border-white/10 transition-all group relative overflow-hidden glow-card"
      >
        <div
          class="absolute top-0 right-0 w-32 h-32 bg-brand-primary/10 blur-[50px] rounded-full group-hover:bg-brand-primary/20 transition-all"
        >
        </div>
        <h2
          class="text-brand-secondary text-[10px] font-black uppercase tracking-[0.2em] mb-4"
        >
          Our Ethos
        </h2>
        <div class="overflow-hidden">
          <p
            class="text-2xl md:text-3xl font-black text-white leading-tight animate-reveal-text"
          >
            "Beyond Code.
            <br />
            <span class="text-brand-primary">Beyond Limits.</span>"
          </p>
        </div>
      </div>

      {/* Vision */}
      <div
        data-aos="fade-up"
        data-aos-delay="100"
        class="p-8 rounded-[2.5rem] bg-white/5 border border-white/10 transition-all group relative overflow-hidden glow-card"
      >
        <div
          class="absolute top-0 right-0 w-32 h-32 bg-brand-secondary/10 blur-[50px] rounded-full group-hover:bg-brand-secondary/20 transition-all"
        >
        </div>
        <h2
          class="text-brand-secondary text-[10px] font-black uppercase tracking-[0.2em] mb-4"
        >
          Our Vision
        </h2>
        <p
          class="text-lg text-brand-light/80 leading-relaxed group-hover:text-white transition-colors"
        >
          To build the fastest, simple, elegant, modern and secure web
          solutions.
        </p>
      </div>

      {/* Mission */}
      <div
        data-aos="fade-up"
        data-aos-delay="200"
        class="p-8 rounded-[2.5rem] bg-white/5 border border-white/10 transition-all group relative overflow-hidden glow-card"
      >
        <div
          class="absolute top-0 right-0 w-32 h-32 bg-white/5 blur-[50px] rounded-full group-hover:bg-white/10 transition-all"
        >
        </div>
        <h3
          class="text-brand-secondary text-[10px] font-black uppercase tracking-[0.2em] mb-4"
        >
          Our Mission
        </h3>
        <ul class="space-y-4">
          {
            aboutData.map((item) => (
              <li class="flex items-start gap-3 text-brand-light/80 group/item">
                <span
                  class={`w-2 h-2 rounded-full bg-${item.color} mt-2 group-hover/item:scale-150 transition-transform`}
                />
                <span class="group-hover/item:text-white transition-colors">
                  {item.text}
                </span>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</section>
