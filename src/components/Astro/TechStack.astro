---
import {
  Atom,
  Rocket,
  Wind,
  Server,
  Braces,
  Database,
  Globe,
  Layout,
  Cpu,
  PenTool,
  GitBranch,
} from "lucide-react";
import techStackData from "../../data/techstack.json";

const IconMap: any = {
  Atom,
  Rocket,
  Wind,
  Server,
  Braces,
  Database,
  Globe,
  Layout,
  Cpu,
  PenTool,
  GitBranch,
};
---

<section
  class="py-24 bg-brand-dark relative border-t border-brand-primary/10 overflow-hidden"
>
  <!-- Subtle Grid Background -->
  <div
    class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.02)_1px,transparent_1px)] bg-[size:40px_40px] [mask-image:radial-gradient(ellipse_60%_60%_at_50%_50%,black,transparent)] pointer-events-none"
  >
  </div>

  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <div class="text-center mb-16">
      <h2
        class="text-brand-secondary font-bold tracking-widest uppercase mb-4"
        data-aos="fade-up"
      >
        The Arsenal
      </h2>
      <div class="overflow-hidden">
        <h3
          class="text-3xl py-4 md:text-5xl font-black text-white animate-reveal-text"
        >
          Technology Stack
        </h3>
      </div>
      <p
        class="text-brand-light/60 mt-4 max-w-2xl mx-auto"
        data-aos="fade-up"
        data-aos-delay="100"
      >
        Battle-tested tools and frameworks that power next-generation web
        experiences.
      </p>
    </div>

    <!-- Tech Categories Grid -->
    <div class="grid md:grid-cols-4 gap-8">
      {
        techStackData.map((category, catIndex) => {
          const CategoryIcon = IconMap[category.icon];
          return (
            <div
              data-aos="fade-up"
              data-aos-delay={catIndex * 100}
              class="bg-white/5 border border-white/10 rounded-3xl p-8 backdrop-blur-xl glow-card"
            >
              <div class="flex items-center gap-3 mb-6">
                <div
                  class={`w-10 h-10 rounded-xl ${category.bgColor} flex items-center justify-center ${category.color} group-hover:scale-110 transition-transform`}
                >
                  <CategoryIcon className="w-5 h-5" aria-hidden="true" />
                </div>
                <h4 class="text-xl font-bold text-white">
                  {category.category}
                </h4>
              </div>
              <p class="text-sm text-brand-secondary mb-6">
                {category.description}
              </p>
              <div class="space-y-4">
                {category.items.map((item) => {
                  const ItemIcon = IconMap[item.icon];
                  return (
                    <div class="flex items-center gap-4 group">
                      <div
                        class={`w-12 h-12 rounded-xl bg-brand-dark border border-white/10 flex items-center justify-center ${item.color} group-hover:scale-110 group-hover:${item.bgColor} transition-all`}
                      >
                        <ItemIcon className="w-6 h-6" aria-hidden="true" />
                      </div>
                      <div>
                        <div
                          class={`font-bold text-white group-hover:${item.color} transition-colors`}
                        >
                          {item.name}
                        </div>
                        <div class="text-xs text-brand-secondary">
                          {item.description}
                        </div>
                      </div>
                    </div>
                  );
                })}
              </div>
            </div>
          );
        })
      }
    </div>
  </div>
</section>
