---
/**
 * HERO COMPONENT - REZCODE (Business Convention Style)
 * Optimized for Clarity, Professionalism, and Performance
 */
import { Image } from "astro:assets";
import logoImage from "../../assets/logo.webp";
import {
  Layers, Zap, Binary, Code, Cpu, 
  Database, Globe, Sparkles, ArrowRight,
} from "lucide-react";
import heroData from "../../data/hero.json";

const IconMap: any = {
  Layers, Zap, Binary, Code, Cpu, 
  Database, Globe, Sparkles, ArrowRight,
};
---

<section
  id="home"
  class="relative min-h-[90vh] flex items-center justify-center overflow-hidden bg-[#05070A] pt-24 pb-20"
>
  <div class="absolute inset-0 pointer-events-none select-none z-0">
    <div class="absolute inset-0 bg-size-[60px_60px] bg-[linear-gradient(to_right,#ffffff05_1px,transparent_1px),linear-gradient(to_bottom,#ffffff05_1px,transparent_1px)]"></div>
    
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-125 bg-brand-primary/[0.05] rounded-full blur-[120px] -translate-y-1/2"></div>
  </div>

  <div class="relative z-10 text-center px-6 max-w-4xl mx-auto">
    <div
      class="inline-flex items-center gap-2 px-4 py-2 rounded-full border border-white/10 bg-white/5 text-brand-secondary text-[11px] font-bold uppercase tracking-widest mb-10"
      data-aos="fade-down"
    >
      <div class="h-1.5 w-1.5 rounded-full bg-brand-primary animate-pulse"></div>
      Advanced Digital Infrastructure
    </div>

    <h1 
      class="text-5xl sm:text-6xl md:text-7xl font-extrabold mb-8 leading-[1.15] tracking-tight text-white"
      data-aos="fade-up"
      data-aos-duration="800"
    >
      Welcome to <br />
      <span class="text-brand-primary">RezCode</span>
    </h1>

    <p 
      class="text-lg md:text-xl text-slate-400 mb-12 max-w-2xl mx-auto leading-relaxed font-medium"
      data-aos="fade-up"
      data-aos-delay="200"
      data-aos-duration="800"
    >
      We craft high-performance web experiences that are <span class="text-white">secure, scalable</span>, and built for the future of your brand.
    </p>

    <div 
      class="flex flex-col sm:flex-row items-center justify-center gap-5"
      data-aos="fade-up"
      data-aos-delay="400"
      data-aos-duration="800"
    >
      {
        heroData.buttons.map((btn) => {
          const Icon = btn.icon ? IconMap[btn.icon] : null;
          return (
            <a
              href={btn.href}
              class={`group relative w-full sm:w-auto px-10 py-4 rounded-lg font-bold text-sm transition-all duration-300 flex items-center justify-center gap-3 ${
                btn.primary
                  ? "bg-brand-primary text-white hover:bg-brand-primary/90 shadow-lg shadow-brand-primary/20"
                  : "bg-transparent border border-white/20 text-white hover:bg-white/5"
              }`}
            >
              {btn.label}
              {Icon && <Icon size={18} className="transition-transform group-hover:translate-x-1" />}
            </a>
          );
        })
      }
    </div>
  </div>
</section>

<style>
  /* Clean structural containment for better performance */
  section {
    contain: paint;
  }
  
  /* Simple AOS logic for Lighthouse score stability */
  @media (max-width: 768px) {
    [data-aos] {
      transform: none !important; /* Nonaktifkan gerakan transform di mobile */
      transition-duration: 400ms !important;
    }
  }
</style>