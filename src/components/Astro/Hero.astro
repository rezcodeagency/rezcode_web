---
import { Image } from "astro:assets";
import logoImage from "../../assets/logo.png"; // Assuming it exists in assets, fallback to src if needed
import {
  Layers,
  Zap,
  Binary,
  Code,
  Cpu,
  Database,
  Globe,
  Sparkles,
  ArrowRight,
} from "lucide-react";
import heroData from "../../data/hero.json";

const IconMap: any = {
  Layers,
  Zap,
  Binary,
  Code,
  Cpu,
  Database,
  Globe,
  Sparkles,
  ArrowRight,
};
---

<section
  id="home"
  class="h-screen flex items-center justify-center relative overflow-hidden bg-brand-dark"
>
  <!-- Single Logo Background - Center -->
  <div
    class="absolute inset-0 flex items-center justify-center opacity-[0.04] pointer-events-none"
  >
    <Image
      src={logoImage}
      alt=""
      aria-hidden="true"
      loading="eager"
      width={600}
      height={600}
      class="w-[600px] h-[600px] object-contain"
    />
  </div>

  <!-- Animated Background Layer -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none z-0">
    <!-- Gradient Orbs -->
    <div
      class="absolute top-1/4 -left-48 w-96 h-96 bg-brand-primary/30 rounded-full blur-3xl animate-float"
    >
    </div>
    <div
      class="absolute bottom-1/4 -right-48 w-96 h-96 bg-brand-secondary/20 rounded-full blur-3xl animate-float-delayed"
    >
    </div>

    <!-- Grid Pattern -->
    <div
      class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.02)_1px,transparent_1px)] bg-[size:100px_100px]"
    >
    </div>
  </div>

  <!-- Floating Tech Icons Layer -->
  <div class="absolute inset-0 pointer-events-none z-0">
    {
      heroData.floatingIcons.map((item) => {
        const Icon = IconMap[item.icon];
        return (
          <div
            class={`absolute ${item.position} ${item.color} animate-float`}
            style={`animation-delay: ${item.delay};`}
            aria-hidden="true"
          >
            <Icon className={item.size} />
          </div>
        );
      })
    }
  </div>

  <!-- Content -->
  <div
    class="relative z-10 text-center px-4 md:px-6 max-w-6xl mx-auto pt-20 md:pt-0"
  >
    <div
      data-aos="fade-down"
      class="inline-flex items-center gap-2 px-3 md:px-4 py-1.5 md:py-2 rounded-full border border-brand-primary/30 bg-brand-primary/10 text-brand-secondary text-[10px] md:text-xs font-bold uppercase tracking-widest mb-6 md:mb-8"
    >
      <span class="w-2 h-2 rounded-full bg-brand-primary animate-pulse"></span>
      Digital Resolution Engineering
    </div>

    <h1
      class="text-4xl sm:text-5xl md:text-7xl lg:text-8xl font-black mb-6 md:mb-8 leading-tight overflow-hidden"
    >
      <span
        class="text-white inline-block animate-slide-reveal-up"
        style="animation-delay: 0.2s;"
      >
        Welcome to
      </span><br />
      <span
        class="text-transparent bg-clip-text bg-gradient-to-r from-brand-primary via-cyan-400 to-brand-secondary animate-gradient inline-block animate-reveal-text"
        style="animation-delay: 0.6s;"
      >
        RezCode
      </span>
    </h1>

    <p
      class="text-base md:text-lg lg:text-xl text-brand-light/80 mb-8 md:mb-12 max-w-3xl mx-auto leading-relaxed px-4 opacity-0 animate-slide-reveal-up"
      style="animation-delay: 1s;"
    >
      We are provide a web solutions that are fast, secure, and infinitely
      scalable. Beyond code, we build digital experiences that define your
      brand's future.
    </p>

    <div
      class="flex flex-col sm:flex-row items-center justify-center gap-4 opacity-0 animate-slide-reveal-up"
      style="animation-delay: 1.4s;"
    >
      {
        heroData.buttons.map((btn) => {
          const Icon = btn.icon ? IconMap[btn.icon] : null;
          return (
            <a
              href={btn.href}
              class={`group px-8 py-4 rounded-full font-bold transition-all duration-300 flex items-center gap-2 hover:gap-3 hover:scale-105 ${
                btn.primary
                  ? "bg-brand-primary text-white hover:bg-brand-primary/90 animate-glow-pulse"
                  : "border-2 border-brand-primary/50 text-brand-primary hover:bg-brand-primary/10"
              }`}
            >
              {btn.label}
              {Icon && (
                <Icon className="w-5 h-5 group-hover:translate-x-1 transition-transform" />
              )}
            </a>
          );
        })
      }
    </div>
  </div>
</section>
