---
import {
  Code2,
  Coffee,
  Clock,
  Users,
  TrendingUp,
  CheckCircle2,
} from "lucide-react";
import statsData from "../../data/stats.json";

const IconMap: any = {
  Code2,
  Coffee,
  Clock,
  Users,
  TrendingUp,
  CheckCircle2,
};
---

<section class="py-24 bg-brand-dark relative overflow-hidden">
  <!-- Animated Grid Background -->
  <div class="absolute inset-0 tech-grid opacity-20"></div>

  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <div class="text-center mb-16">
      <h2
        class="text-brand-secondary font-bold tracking-[0.3em] uppercase text-xs mb-4"
        data-aos="fade-up"
      >
        Our Collaboration
      </h2>
      <div class="overflow-hidden">
        <h3
          class="text-4xl md:text-6xl font-black text-white tracking-tighter animate-reveal-text"
        >
          Built on Trust
        </h3>
      </div>
    </div>

    <div
      class="flex flex-col md:flex-row justify-center items-center gap-8 md:gap-16"
    >
      {
        statsData.map((stat, index) => {
          const Icon = IconMap[stat.icon];
          return (
            <div
              data-aos="fade-up"
              data-aos-delay={index * 150}
              class="group relative w-full max-w-[400px] p-10 rounded-[2.5rem] bg-white/[0.03] backdrop-blur-3xl border border-white/10 hover:border-brand-primary/50 transition-all duration-500 hover:-translate-y-4 glow-card overflow-hidden"
            >
              {/* Gradient Glow Background */}
              <div
                class={`absolute inset-0 bg-gradient-to-br from-brand-primary/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700 pointer-events-none`}
              />

              <div class="absolute -top-24 -right-24 w-48 h-48 bg-brand-primary/10 blur-[80px] rounded-full group-hover:bg-brand-primary/20 transition-all duration-700" />

              <div class="relative z-10 flex flex-col items-center text-center">
                <div
                  class={`w-20 h-20 rounded-3xl bg-brand-primary/10 flex items-center justify-center text-brand-primary mb-8 group-hover:scale-110 group-hover:rotate-6 transition-all duration-500 border border-brand-primary/20 shadow-lg shadow-brand-primary/10`}
                >
                  <Icon className="w-10 h-10" aria-hidden="true" />
                </div>

                <div class="text-5xl md:text-7xl font-black text-white mb-3 tracking-tighter group-hover:text-brand-primary transition-colors duration-500">
                  {stat.value}
                </div>

                <div class="text-brand-secondary text-sm font-black uppercase tracking-[0.2em]">
                  {stat.label}
                </div>
              </div>
            </div>
          );
        })
      }
    </div>
  </div>
</section>
