---
/**
 * STATS COMPONENT - REZCODE (Professional & Honest)
 * Optimized for smaller data sets to maintain a premium feel.
 */
import {
  Users,
  TrendingUp,
} from "lucide-react";
import statsData from "../../data/stats.json";
import projectsData from "../../data/projects.json";

const IconMap: any = {
  Users,
  TrendingUp,
};
---

<section class="py-16 md:py-24 bg-[#020406] border-y border-white/[0.05] relative overflow-hidden">
  <div class="absolute inset-0 pointer-events-none opacity-20">
    <div class="absolute top-0 left-1/3 w-px h-full bg-linear-to-b from-transparent via-white/10 to-transparent"></div>
  </div>

  <div class="max-w-6xl mx-auto px-6 relative z-10">
    <div class="flex flex-col lg:flex-row items-center gap-12 lg:gap-24">
      
      <div class="w-full lg:w-1/2 text-center lg:text-left" data-aos="fade-right">
        <h2 class="text-4xl md:text-6xl font-extrabold text-white tracking-tighter leading-tight mb-6">
          Growing with <br class="hidden md:block"/> Every Solution.
        </h2>
        <p class="text-slate-400 text-base md:text-lg font-medium max-w-lg leading-relaxed">
          We focus on building deep, long-term partnerships. Every project is an opportunity to push the boundaries of what's possible in digital engineering.
        </p>
      </div>

      <div class="w-full lg:w-1/2 grid grid-cols-1 sm:grid-cols-2 gap-8 md:gap-12" data-aos="fade-up">
        {
          statsData.map((stat) => {
            const Icon = IconMap[stat.icon] || TrendingUp;
            // Gunakan data dari projects.json jika labelnya Projects Done
            const displayValue = stat.label === "Projects Done" ? projectsData.length : stat.value;

            return (
              <div class="relative flex flex-col items-center lg:items-start group p-6 rounded-2xl bg-white/[0.02] border border-white/5 hover:border-brand-primary/20 transition-all duration-500">
                <div class={`mb-4 transition-colors duration-500 ${stat.color === 'cyan' ? 'text-cyan-400' : 'text-brand-primary'}`}>
                  <Icon size={28} strokeWidth={2} />
                </div>

                <div class="text-5xl md:text-7xl font-black text-white mb-2 tracking-tighter tabular-nums flex items-baseline gap-1">
                  {displayValue}
                  <span class="text-brand-primary/40 text-3xl">+</span>
                </div>

                <div class="text-slate-500 text-xs md:text-sm font-bold uppercase tracking-[0.2em] leading-tight">
                  {stat.label}
                </div>
              </div>
            );
          })
        }
      </div>

    </div>
  </div>
</section>