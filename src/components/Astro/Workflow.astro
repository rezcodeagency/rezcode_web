---
import { Search, PenTool, Code2, Rocket } from "lucide-react";
import workflowData from "../../data/workflow.json";

const IconMap: any = {
  Search,
  PenTool,
  Code2,
  Rocket,
};
---

<section id="workflow" class="py-24 bg-brand-dark relative overflow-hidden">
  <div class="absolute inset-0 bg-brand-primary/5 opacity-50 tech-grid"></div>

  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <div class="text-center mb-20 text-center">
      <h2
        class="text-brand-secondary font-bold tracking-widest uppercase mb-4"
        data-aos="fade-up"
      >
        The Algorithm
      </h2>
      <div class="overflow-hidden">
        <h3
          class="text-4xl md:text-5xl font-black text-white animate-reveal-text"
        >
          How We Operate
        </h3>
      </div>
    </div>

    <div class="relative grid md:grid-cols-4 gap-8">
      {/* Connecting Line (Desktop) */}
      <div
        class="hidden md:block absolute top-12 left-0 w-full h-0.5 bg-gradient-to-r from-transparent via-brand-primary/30 to-transparent"
        data-aos="fade-right"
        data-aos-delay="400"
      >
      </div>

      {
        workflowData.map((step, index) => {
          const Icon = IconMap[step.icon];
          return (
            <div
              data-aos="fade-up"
              data-aos-delay={step.delay}
              class="relative group"
            >
              <div class="w-24 h-24 mx-auto bg-brand-dark border-2 border-brand-primary/30 rounded-full flex items-center justify-center mb-6 relative z-10 group-hover:border-brand-primary group-hover:scale-110 group-hover:rotate-6 transition-all shadow-[0_0_20px_rgba(80,122,189,0.2)]">
                <Icon
                  className="w-10 h-10 text-brand-primary group-hover:animate-pulse"
                  aria-hidden="true"
                />
              </div>
              <div class="text-center">
                <h4 class="text-xl font-bold text-white mb-2 group-hover:text-brand-primary transition-colors">
                  {step.title}
                </h4>
                <p class="text-sm text-brand-secondary leading-relaxed">
                  {step.description}
                </p>
              </div>
            </div>
          );
        })
      }
    </div>
  </div>
</section>
