---
import { MessageCircle, Mail, ArrowRight } from "lucide-react";
import contactData from "../../data/contact.json";

const IconMap: any = {
  MessageCircle,
  Mail,
  ArrowRight,
};
---

<section id="contact" class="py-24 px-6 bg-[#050810] relative overflow-hidden">
  <div
    class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-brand-primary/10 blur-[120px] rounded-full pointer-events-none"
  >
  </div>

  <div class="max-w-5xl mx-auto relative z-10">
    <div
      data-aos="zoom-in-up"
      class="relative bg-white/[0.02] border border-white/10 rounded-[2.5rem] p-10 md:p-20 text-center overflow-hidden backdrop-blur-sm"
    >
      <span
        class="inline-block text-brand-primary text-xs font-bold uppercase tracking-[0.4em] mb-6"
        data-aos="fade-up"
      >
        Get In Touch
      </span>

      <div class="mb-8 py-2">
        <h2
          class="text-4xl md:text-7xl font-black text-white tracking-tighter leading-[1.1] md:leading-[1]"
          data-aos="fade-up"
          data-aos-delay="100"
        >
          Ready to start your <br class="hidden md:block" />
          <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-brand-primary to-brand-secondary inline-block pb-2"
          >
            next big project?
          </span>
        </h2>
      </div>

      <p
        class="text-white/50 text-base md:text-xl mb-12 max-w-xl mx-auto leading-relaxed"
        data-aos="fade-up"
        data-aos-delay="200"
      >
        Whether you have a question or a visionary idea, my inbox is always
        open. Letâ€™s build something extraordinary together.
      </p>

      <div
        class="flex flex-col sm:flex-row gap-4 justify-center items-stretch sm:items-center"
        data-aos="fade-up"
        data-aos-delay="300"
      >
        {
          contactData.channels.map((channel) => {
            const Icon = IconMap[channel.icon];
            return (
              <a
                href={channel.href}
                target={channel.href.startsWith("http") ? "_blank" : "_self"}
                aria-label={`Contact via ${channel.label}`}
                class={`group px-8 py-4 rounded-2xl font-bold flex items-center justify-center gap-3 transition-all duration-300 hover:-translate-y-1 ${
                  channel.label.toLowerCase().includes("email")
                    ? "bg-white text-black hover:bg-brand-primary hover:text-white"
                    : "bg-white/5 text-white border border-white/10 hover:border-brand-primary hover:bg-brand-primary/10"
                }`}
              >
                <Icon className="w-5 h-5 group-hover:scale-110 transition-transform" />
                <span>{channel.label}</span>
              </a>
            );
          })
        }
      </div>
    </div>
  </div>
</section>

<style>
  .glow-card {
    box-shadow: 0 0 50px -12px rgba(var(--brand-primary-rgb), 0.1);
  }
</style>
