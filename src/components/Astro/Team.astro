---
/**
 * TEAM SECTION - FARELL RHEZKY ALVIANTO
 * Accessibility & Mobile Focused
 */
import teamData from "../../data/team.json";
import { Image } from "astro:assets";
import { Github, Linkedin, Instagram } from "lucide-react";
---

<section id="team" class="py-12 md:py-24 bg-[#020406] border-t border-white/5 relative overflow-hidden">
  <div class="max-w-6xl mx-auto px-6 relative z-10">
    
    <div class="mb-10 flex justify-between items-end">
      <div>
        <h2 class="text-3xl md:text-5xl font-extrabold text-white tracking-tighter">
          Our <span class="text-white/20 italic font-medium">Team.</span>
        </h2>
      </div>
      
      <div class="flex items-center gap-2 md:hidden">
        <span class="text-[10px] text-white/20 font-bold uppercase tracking-widest">Swipe</span>
        <div class="w-8 h-[1px] bg-white/20"></div>
      </div>
    </div>

    <div 
      class="flex md:grid md:grid-cols-3 lg:grid-cols-4 gap-5 overflow-x-auto md:overflow-visible pb-10 md:pb-0 snap-x snap-mandatory scrollbar-hide -mx-6 px-6 md:mx-0 md:px-0"
      aria-label="Team Members"
    >
      {
        teamData.map((member, index) => (
          <div
            class="min-w-[280px] sm:min-w-[300px] md:min-w-0 group relative flex flex-col p-7 rounded-2xl bg-white/[0.02] border border-white/[0.05] hover:border-brand-primary/30 transition-all duration-300 snap-center"
            data-aos="fade-up"
            data-aos-delay={index * 50}
          >
            <div class="relative mb-6 flex justify-center md:justify-start">
              <div class="w-20 h-20 rounded-2xl overflow-hidden border border-white/10 bg-brand-dark group-hover:border-brand-primary/50 transition-all duration-500">
                {member.image ? (
                  <Image
                    src={member.image}
                    alt={member.name}
                    width={150}
                    height={150}
                    class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-500 scale-105"
                  />
                ) : (
                  <div class="w-full h-full flex items-center justify-center text-xl font-black text-brand-primary bg-brand-primary/5">
                    {member.initials}
                  </div>
                )}
              </div>
            </div>

            <div class="text-center md:text-left">
              <span class="text-[9px] font-bold text-brand-primary uppercase tracking-[0.2em] mb-1 block">
                {member.role}
              </span>
              <h4 class="text-lg font-bold text-white mb-2 tracking-tight group-hover:text-brand-primary transition-colors">
                {member.name}
              </h4>
              <p class="text-slate-500 text-[12px] leading-relaxed mb-8 line-clamp-3">
                {member.bio}
              </p>

              <div class="flex justify-center md:justify-start gap-2">
                {[
                  { icon: Linkedin, url: member.linkedin, label: "Linkedin" },
                  { icon: Github, url: member.github, label: "Github" },
                  { icon: Instagram, url: member.instagram, label: "Instagram" },
                ].map((social) =>
                  social.url && (
                    <a
                      href={social.url}
                      target="_blank"
                      rel="noopener noreferrer"
                      aria-label={`${social.label} profile of ${member.name}`}
                      class="w-11 h-11 flex items-center justify-center rounded-xl bg-white/[0.03] border border-white/5 text-white/40 hover:text-brand-primary hover:bg-brand-primary/10 transition-all"
                    >
                      <social.icon className="w-4 h-4" />
                    </a>
                  )
                )}
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <div class="mt-4 flex justify-center gap-1.5 md:hidden">
      {teamData.map((_, i) => (
        <div class="h-1 w-4 rounded-full bg-white/10 group-active:bg-brand-primary"></div>
      ))}
    </div>
  </div>
</section>

<style>
  /* Sembunyikan scrollbar bawaan untuk pengalaman swipe yang lebih native */
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
    /* Memberikan efek elastic scrolling pada iOS */
    -webkit-overflow-scrolling: touch;
  }

  /* Optimalisasi Touch Performance */
  a, button {
    touch-action: manipulation;
  }
</style>